Package: mocaredd
Title: Monte Carlo Simulation for REDD+ uncertainty analysis
Version: 0.3.0
Authors@R: c(
    person("Gael", "Sola", , "gaso.ella@gmail.com", role = c("aut", "cre")),
    person("Javier", "Garcia Perez", , "doctorgamarra@gmail.com", role = c("aut")),
    person("Jimena", "Saucedo Miranda", , "jimenasaucedomiranda@gmail.com", role = c("aut")),
    person("Lauri", "Vesa", , "lauri.vesa@gmail.com", role = c("aut"))
